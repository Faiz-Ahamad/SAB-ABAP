MODULE status_0100 OUTPUT.
  LOOP AT SCREEN.
    IF screen-name = 'YINV_HDR-INV_TYPE' OR
       screen-name = 'YINV_HDR-INV_DATE'.
      screen-input = 0.
      MODIFY SCREEN.
    ENDIF.
  ENDLOOP.
  SET PF-STATUS 'HEADER'.
  SET TITLEBAR 'HDR'.
ENDMODULE.
